@using com.SML.Lib.Common
@using com.SML.BIGTRONS.Enum
@using com.SML.BIGTRONS.ViewModels
@model NotificationTemplateVM
@{
    
    var X = Html.X();
    string sPageName = "NotificationTemplate";
    var iWindowWidth = 650;
    int iGridMinHeight = 250;
    int iBodyPadding = 10;
    string sToolbarPaddingSpec = "0 10 10 0";
    int iPageSize = 30;

    string sHandler = "selectNotificationTemplateBrowse('" + ViewData["Control" + NotificationTemplateVM.Prop.NotificationTemplateID.Name]
        + "', '" + ViewData["Control" + NotificationTemplateVM.Prop.NotificationTemplateDesc.Name]
        + "', App.grdNotificationTemplateBrowse.getRowsValues({selectedOnly:true})[0]['" + NotificationTemplateVM.Prop.NotificationTemplateID.Name + "']"
        + ", App.grdNotificationTemplateBrowse.getRowsValues({selectedOnly:true})[0]['" + NotificationTemplateVM.Prop.NotificationTemplateDesc.Name + "']"
        + ");";

    Button.Builder btnSelect = global_asax.Button(Buttons.ButtonSelect, sPageName, null, null, true, false, false, Buttons.ButtonList);

    <script>
        $(document).ready(function () {
            setTimeout("resizeGrdNotificationTemplateBrowse()", 1);
        });

        $(window).resize(function () {
            resizeGrdNotificationTemplateBrowse();
        });

        resizeGrdNotificationTemplateBrowse = function () {
            if (App.grdNotificationTemplateBrowse != null)
                App.grdNotificationTemplateBrowse.setHeight($(window).height() - App.grdNotificationTemplateBrowse.getY() - (App.grdNotificationTemplateBrowse.getBorderPadding().beforeY * 2 - 5 + 2) - $("footer").height());
        };

        selectionNotificationTemplateChange = function (length) {
            App.ButtonSelectNotificationTemplate.setDisabled(length < 1);
        };

        doFilter = function (filter, NotificationTemplateID, NotificationTemplateDesc) {
            filter.fields[0].items.items[0].setValue(NotificationTemplateID);
            filter.fields[1].items.items[0].setValue(NotificationTemplateDesc);
        };

        selectNotificationTemplateBrowse = function (ControlNotificationTemplateID, ControlNotificationTemplateDesc, NotificationTemplateID, NotificationTemplateDesc) {
            if (Ext.getCmp(ControlNotificationTemplateID) != undefined) {
                Ext.getCmp(ControlNotificationTemplateID).setValue(NotificationTemplateID);
                Ext.getCmp(ControlNotificationTemplateID).originalValue = NotificationTemplateID;
            }
            if (Ext.getCmp(ControlNotificationTemplateDesc) != undefined) {
                Ext.getCmp(ControlNotificationTemplateDesc).setValue(NotificationTemplateDesc);
                Ext.getCmp(ControlNotificationTemplateDesc).originalValue = NotificationTemplateDesc;
            }
            App.WinBrowseNotificationTemplate.close();
        };
    </script>
}
@(
    X.Window()
    .CloseAction(CloseAction.Destroy)
    .ID("WinBrowseNotificationTemplate")
    .Modal(true)
    .Title(ViewBag.Title)
    .Width(iWindowWidth)
    .Items(
        X.GridPanel()
        .ID("grdNotificationTemplateBrowse")
        .Padding(iBodyPadding)
        .MinHeight(iGridMinHeight)
        .SelectionModel(
            X.RowSelectionModel()
            .Mode(SelectionMode.Multi)
            .AllowDeselect(true)
        )
        .Listeners(oListener =>
        {
            oListener.SelectionChange.Handler = "selectionNotificationTemplateChange(selected.length)";
            oListener.ViewReady.Handler = "doFilter(this.filterHeader, '" + ViewData[NotificationTemplateVM.Prop.NotificationTemplateID.Name].ToString() + "', '" + ViewData[NotificationTemplateVM.Prop.NotificationTemplateDesc.Name].ToString() + "');";
            oListener.ViewReady.Delay = 1;oListener.RowDblClick.Handler = sHandler;
        })
        .Store(
            X.StoreForModel()
            .Proxy(
                X.AjaxProxy()
                .Url(Url.Action("ReadBrowse", "NotifTemplate"))
                .Reader(X.JsonReader().RootProperty("data"))
                .ExtraParams(exParam =>
                        exParam.AddRange(new Parameter[]{
                            new Parameter()
                            {
                                Name = FunctionsVM.Prop.FunctionID.Name,
                                Value = ViewData[FunctionsVM.Prop.FunctionID.Name].ToString(),
                                Mode = ParameterMode.Value,
                                Encode = false
                            }
                        })
                    )
            )
            .AutoLoad(ViewData[NotificationTemplateVM.Prop.NotificationTemplateID.Name].ToString() == "" && ViewData[NotificationTemplateVM.Prop.NotificationTemplateDesc.Name].ToString() == "")
            .RemoteSort(true)
            .RemotePaging(true)
            .RemoteFilter(true)
            .PageSize(iPageSize)
            .SorterFor(Model, model => model.NotificationTemplateID, Ext.Net.SortDirection.ASC)
        )
        .ColumnModel(
            X.Column()
            .Text(NotificationTemplateVM.Prop.NotificationTemplateID.Desc)
            .DataIndex(Model, model => model.NotificationTemplateID)
            .Flex(1)
            .Items(
                X.Container()
                .CustomConfig(config => config.Add(new ConfigItem("getValue", "getValueText", ParameterMode.Raw)))
                .Layout(LayoutType.HBox)
                .Items(
                    X.TextField()
                    .Flex(1)
                    .Listeners(oListener =>
                    {
                        oListener.Change.Handler = "this.up('grid').filterHeader.onFieldChange(this.up('container'));";
                    })
                )
            ),
            X.Column()
            .Text(NotificationTemplateVM.Prop.NotificationTemplateDesc.Desc)
            .DataIndex(Model, model => model.NotificationTemplateDesc)
            .Flex(3)
            .Items(
                X.Container()
                .CustomConfig(config => config.Add(new ConfigItem("getValue", "getValueText", ParameterMode.Raw)))
                .Layout(LayoutType.HBox)
                .Items(
                    X.TextField()
                    .Flex(1)
                    .Listeners(oListener =>
                    {
                        oListener.Change.Handler = "this.up('grid').filterHeader.onFieldChange(this.up('container'));";
                    })
                )
            )
        )
        .Plugins(
            X.FilterHeader()
            .Remote(true)
        )
        .TopBar(
            X.Toolbar()
            .PaddingSpec(sToolbarPaddingSpec)
            .Items(
                btnSelect.Disabled(true).Handler(sHandler)
            )
        )
        .BottomBar(
            X.PagingToolbar()
                .DisplayInfo(true)
                .BaseCls("paging")
                .DisplayMsg("Displaying {0} - {1} of {2}")
                .EmptyMsg("No records to display")
        )
    )
)