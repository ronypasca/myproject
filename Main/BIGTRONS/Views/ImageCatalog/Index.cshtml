@{
    Layout = null;
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
@*<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>*@

<style>
    /* Make the image fully responsive */
    .carousel-inner img {
        width: 60%;
        height: 60%;
        margin-left: 20%;
        margin-top: 50px;
    }
</style>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<div id="carousel-box" style="display: none; width: 30%;float:left">
    <div id="demo" class="carousel slide col-md-12 col-sm-12" data-ride="carousel" >

        <!-- Indicators -->
        <ul class="carousel-indicators">
            @{
                int i_data = 0;
                foreach (var data in ViewBag.ImageData)
                {
                    if (i_data == 0)
                    {
                        <li data-target="#demo" data-slide-to=i_data class="active"></li>
                    }
                    else
                    {
                        <li data-target="#demo" data-slide-to=i></li>
                    }
                    i_data++;
                }
            }
        </ul>
        <!-- The slideshow -->
        <div class="carousel-inner">
            @{
                int i_image = 0;
                foreach (var data in ViewBag.ImageData)
                {
                    if (i_image == 0)
                    {
                        <div class="carousel-item active">
                            <img src="@data.RawData" alt="@data.Filename" width="550" height="250">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@data.RawData" alt="@data.Filename" width="550" height="250">
                        </div>
                    }
                    i_image++;
                }
            }
        </div>
        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>

</div>
<div style="float:left;width:35%">
    @{
        var itemDesc = ViewBag.ImageData[0].ListItemVM.Count == 0 ? "": ViewBag.ImageData[0].ListItemVM[0].ItemDesc;
        var itemDetailDesc = ViewBag.ImageData[0].ListItemDetailsVM.Count == 0 ? "" : @Html.Raw(ViewBag.ImageData[0].ListItemDetailsVM[0].ItemDetailDesc.Replace("\r\n", "<br />"));

        <h4 style="word-wrap: break-word !important;">@itemDesc</h4>
        <h6>@itemDetailDesc</h6>

    }
</div>